{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "propertyfinder/agent-listing",
  "title": "Agent Listing",
  "category": "propertyfinder",
  "icon": "groups",
  "description": "Display a list of agents with pagination and metadata options.",
  "keywords": ["agents", "listing", "propertyfinder"],
  "textdomain": "propertyfinder",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  },
  "attributes": {
    "postsPerPage": {
      "type": "number",
      "default": 12
    },
    "columns": {
      "type": "number",
      "default": 3
    },
    "showImage": {
      "type": "boolean",
      "default": true
    },
    "showBio": {
      "type": "boolean",
      "default": false
    },
    "showEmail": {
      "type": "boolean",
      "default": true
    },
    "showPhone": {
      "type": "boolean",
      "default": true
    },
    "showLinkedIn": {
      "type": "boolean",
      "default": false
    },
    "showRole": {
      "type": "boolean",
      "default": false
    },
    "showStatus": {
      "type": "boolean",
      "default": false
    },
    "enablePagination": {
      "type": "boolean",
      "default": true
    },
    "orderBy": {
      "type": "string",
      "default": "title"
    },
    "order": {
      "type": "string",
      "default": "ASC"
    }
  }
}

